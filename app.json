{
  "expo": {
    "name": "Home Maintenance",
    "slug": "home-maintenance",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "owner": "omerfarukozadali",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#22c55e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.homemaintenance.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to take photos of your home, assets, and documents.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to add photos of your home, assets, and documents.",
        "NSContactsUsageDescription": "This app can import worker contact information from your contacts.",
        "NSFaceIDUsageDescription": "This app uses Face ID to secure your data.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.homemaintenance.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#22c55e"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_CONTACTS",
        "android.permission.USE_BIOMETRIC",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-sqlite",
      "expo-image-picker",
      "expo-document-picker",
      "expo-file-system",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID."
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "extra": {
      "eas": {
        "projectId": "5e23e472-6c03-4fe5-b85b-9eca68f15aa8"
      }
    }
  }
}
